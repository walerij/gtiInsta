@model gitInsta.Models.loginpass
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Авторизация</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div id="navi" class="navbar navbar-fixed-top">
        <div class="col-xs-4"></div>
        <div class="col-xs-4"> <span class="logo"> Instagram</span> от Валеры</div>
        <div class="col-xs-4"></div>


    </div>
    <div id="header">
        <div class="col-xs-4"></div>
        <div class="col-xs-4"></div>
        <div class="col-xs-4"></div>
    </div>
    <div id="container" class="col-xs-12">
        <div class="col-xs-4"></div>
        <div class="col-xs-4">
           
             <!---<input type="text" name="login" id="login" class="form-control" />-->
            @using (Html.BeginForm())
            {
                <p>Логин 
                    @Html.ValidationMessageFor(m => m.login)
                @Html.TextBoxFor(m => m.login, new { @class = "form-control" })</p>

               
                <p> Пароль
                           @Html.ValidationMessageFor(m => m.password)
               @Html.PasswordFor(m => m.password, new { @class = "form-control" })</p>
                <p><input type="submit" value="Войти" class="btn btn-success" /></p>


            }

        </div>
        <div class="col-xs-4"></div>

    </div>
    <div id="footer">
        <div class="col-xs-4"></div>
        <div class="col-xs-4">@DateTime.Now.Year - Instagram от Валеры</div>
        <div class="col-xs-4"></div>

    </div>
</body>
</html>
